#
# bspwm hotkeys
#

# Exit from BSPWM to login screen
super + alt + Escape
    bspc quit

# Close window
super + w
    bspc window -c

# Set next layout current desktop
super + t
    bspc desktop -l next

# Balance layout
super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {_, shift +}{h,j,k,l}
    bspc window -{f,s} {left,down,up,right} || bspc window -f {prev, prev, next, next}

# Change size
super + alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

super + {p,n}
    bspc desktop -f {prev.occupied,next.occupie}

# Set focus on click mouse left button
~button1
    bspc pointer -g focus

super + @button{1-3}
    bspc pointer -u

#
# WM independent hotkeys
#

super + Return
    urxvt

super + space
    dmenu_run

# Make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# Add support functions keys
XF86AudioMute
    amixer set Master toggle
XF86AudioLowerVolume
    amixer -q sset Master 3%-
XF86AudioRaiseVolume
    amixer -q sset Master 3%+

